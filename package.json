{
  "name": "event-reward-platform",
  "private": true,
  "author": {
    "name": "winverse",
    "email": "public.winverse@gmail.com"
  },
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "prisma:init": "pnpm --filter=@packages/database generate:prisma",
    "clean": "shx rm -rf ./node_modules ./apps/*/node_modules ./packages/*/node_modules ./apps/*/dist ./packages/*/dist"
  },
  "devDependencies": {
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.11.24",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "prettier": "^3.5.3",
    "shx": "^0.4.0",
    "turbo": "^2.5.3",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": "18",
    "pnpm": ">=10",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "packageManager": "pnpm@10.11.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
