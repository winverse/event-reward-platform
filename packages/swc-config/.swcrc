{
  "$schema": "https://swc.rs/schema.json",
  "module": {
    "type": "nodenext",
    "resolveFully": true
  },
  "jsc": {
    "target": "es2023",
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "decoratorMetadata": true,
      "useDefineForClassFields": false
    },
    "baseUrl": "./",
    "paths": {
      "@providers/*": [
        "src/providers/*"
      ],
      "@constants/*": [
        "src/common/constants/*"
      ],
      "@filters/*": [
        "src/common/filters/*"
      ],
      "@interfaces/*": [
        "src/common/interfaces/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ]
    }
  },
  "minify": false
}